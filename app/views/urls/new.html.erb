<button class='btn btn-info btn-lg btn-block'>New Url</button>
<br />
<div class='well'>
<% if @url.errors.any? %>
    <p class='alert alert-danger'>Errors</p>
    <% @url.errors.full_messages.each do |e| %>
        <p class='text-danger'><%= e %></p>
    <% end %>
<% end %>
<%= form_for @url, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <%= f.text_field :url , class: 'form-control', placeholder: 'Url (ex: http://www.yourdomain.com/abcdef/somelongurl)' %>
    <br />
    <%= f.text_field :short , class: 'form-control', placeholder: '(Optional) Desired short name' %>
    <br />
 <script type="text/javascript"
     src="http://www.google.com/recaptcha/api/challenge?k=6LfMbOsSAAAAALvw0SgrgxAKfoLC1S3LyRBh03dH">
  </script>
  <noscript>
     <iframe src="http://www.google.com/recaptcha/api/noscript?k=6LfMbOsSAAAAALvw0SgrgxAKfoLC1S3LyRBh03dH"
         height="300" width="500" frameborder="0"></iframe><br>
     <textarea name="recaptcha_challenge_field" rows="3" cols="40">
     </textarea>
     <input type="hidden" name="recaptcha_response_field"
         value="manual_challenge">
  </noscript>
    <%= f.submit "Create", class: "btn btn-primary"%>

<% end %>
</div>
